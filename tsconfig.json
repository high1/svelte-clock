{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {    
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "types": ["svelte", "vite/client"],
    "noEmit": true,
    "baseUrl": "src",
    "checkJs": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.svelte"],
}
